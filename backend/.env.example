# Backend Environment Variables Template


# Database
POSTGRES_USER=secureapp
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=secureapp

BACKEND_PORT=4000
DATABASE_URL=postgresql://secureapp:your_secure_password_here@db:5432/secureapp

# HTTPS Configuration
HTTPS_ENABLED=true
CERTS_DIR=/app/certs
HTTPS_CERT_PATH=/app/certs/prodpol.pem
HTTPS_KEY_PATH=/app/certs/prodpol-key.pem

# Frontend URLs (change to your domain/IP)
FRONTEND_URL=https://your-domain-or-ip
FRONTEND_ORIGINS=https://your-domain-or-ip,http://your-domain-or-ip

# JWT Configuration (generate a new secret with: openssl rand -hex 64)
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRATION=15m
REFRESH_EXPIRATION=7d

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here

# Admin Account
ADMIN_EMAIL=admin@secureapp.com
ADMIN_LOGIN=admin
ADMIN_PASSWORD=your_admin_password_here
ADMIN_FIRST_NAME=Admin
ADMIN_LAST_NAME=System
ADMIN_AVATAR_URL=https://i.pravatar.cc/150?img=3
ADMIN_PHONE=+1234567890
